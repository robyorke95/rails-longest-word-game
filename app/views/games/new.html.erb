<div class="container text-center p-5">
  <h1>New Game</h1>

  <div class="d-inline-flex">
    <% @letters.each do |letter| %>
      <h3 class="p-1 m-2 bg-primary text-light fw-bold text-center shadow bg-body-tertiary rounded" style="width: 40px; height: 40px;">
        <%= letter %>
      </h3>
    <% end %>
  </div>

  <p class="mt-3">What is your longest word?</p>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word">
    <input class="btn btn-outline-success"type="submit" value="Check my score!">
  </form>
</div>
